datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int          @id @default(autoincrement())
  name          String
  email         String       @unique
  password      String 
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  transactions  Transaction[]
  products      Product[]
}

model Product {
  id           Int                @id @default(autoincrement())
  userId       Int
  name         String
  description  String
  price        Float
  rentPrice    Float
  totalViews   Int @default(0)
  rentDuration RentDurationTypes  @default(perHour)
  status       CurrentStatusTypes @default(available)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  user         User               @relation(fields: [userId], references: [id])
  transactions Transaction[]
  categories   Category[]

}

model Category {
  id        Int          @id @default(autoincrement())
  name      String
  products  Product[]
}

model Transaction {
  id                Int       @id @default(autoincrement())
  userId            Int
  productId         Int
  transactionType   TransactionActionTypes?
  transactionDate   DateTime  @default(now())
  rentalDateStart   DateTime? //if action_type = borrowed
  rentalDateEnd     DateTime?   //if action_type = borrowed
  user              User       @relation(fields: [userId], references: [id])
  product           Product    @relation(fields: [productId], references: [id])
}

enum TransactionActionTypes {  
  bought
  borrowed
  returned
}

enum CurrentStatusTypes {
  available
  sold
  lent
  unavailable
}

enum RentDurationTypes {
  perHour
  perDay
  perWeek
  perMonth
  perYear
}